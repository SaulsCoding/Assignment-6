<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BankMobile.MainPage">

    <StackLayout>
        <Frame BackgroundColor="Aquamarine" Padding="24" CornerRadius="0">
            <Label Text="Banking App" HorizontalOptions="Center" TextColor="DarkMagenta" FontSize="30"/>
        </Frame>

        <Entry x:Name="depositAmount" Keyboard="Numeric" Placeholder="Enter Amount" />
        <Entry x:Name="depositReason" Placeholder="Provide Reason" Margin="0,23,0,0" MaxLength="30" WidthRequest="30"/>
        <Button x:Name="DepositButton"  Text="Deposit" Clicked="DepositButton_Clicked" />
        <Entry x:Name="withdrawAmount" Keyboard="Numeric" Placeholder="Enter Amount" />
        <Entry x:Name="withReason" Placeholder="Provide Reason" Margin="0,23,0,0" MaxLength="30" WidthRequest="30"/>
        <Button x:Name="WithdrawAmounts" Text="Withdraw" Clicked="WithdrawAmounts_Clicked"/>
        
        
        
        
        <Button x:Name="DisplayHistoryButton" Text="Transaction History" Clicked="DisplayHistoryButton_Clicked" />
        <Label x:Name="TransactionHostory" HorizontalTextAlignment="Center" />

    </StackLayout>

</ContentPage>
